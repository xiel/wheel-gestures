{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src"
  }
}
